<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmishSmash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rmt_red</item>
        <item name="colorPrimaryVariant">@color/rmt_grey</item>
        <item name="colorOnPrimary">@color/rmt_grey</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rmt_orange</item>
        <item name="colorSecondaryVariant">@color/rmt_grey</item>
        <item name="colorOnSecondary">@color/rmt_grey</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/rmt_red</item>
    </style>

    <style name="defaultText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="msgText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="linkStyleText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/link_blue</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="warningStyleText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/rmt_red</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="unsureStyleText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/rmt_orange</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="versionText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <!-- Colour of name text -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>`
</resources>